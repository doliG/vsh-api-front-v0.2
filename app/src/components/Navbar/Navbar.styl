/**
 * Import
 */
@require('app/styles/colors.styl')

/**
 * Colors
 */
$nav-bg-color = $white
$link-color = $blue-600
$link-active-border-color = $blue-600
$link-hover-border-color = $grey-200

/**
 * Style
 */
#navbar
  min-width: 150px
  padding-top: 1em
  background-color: $nav-bg-color

  a
    font-size: 1.2em
    text-transform: uppercase
    display: block
    padding: .5em
    color: $link-color

    &:hover
      border-right: 5px solid $link-hover-border-color

    &.active
      border-right: 5px solid $link-active-border-color
